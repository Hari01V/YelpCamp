<%- include("../partials/header") %>
<div class=container>
	<h1 class="display-4 text-center mx-auto">Create a New Comment for <%= campground.name %></h1>
	<div class="row justify-content-center">
		<div class="col-md-6">
			<form action="/campgrounds/<%= campground._id %>/comments" method="POST">
				<div class="form-group">
					<label for="text">Comment Text</label>
					<input class="form-control" type="text" name="comment[text]">
				</div>
				<button type="submit" class="btn btn-primary btn-block">Submit</button>
			</form>
		</div>
	</div>

	<a class="btn btn-danger float-right" href="/campgrounds">Go Back</a>
</div>

<%- include("../partials/footer") %>
