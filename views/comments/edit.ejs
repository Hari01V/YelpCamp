<%- include("../partials/header") %>
<div class=container>
	<h1 class="display-4 text-center mx-auto">Edit Comment</h1>
	<div class="row justify-content-center">
		<div class="col-md-6">
			<form action="/campgrounds/<%=campgroundId%>/comments/<%=comment._id%>?_method=PUT" method="POST">
				<div class="form-group">
					<label for="text">Comment Text</label>
					<input class="form-control" type="text" name="comment[text]" value="<%=comment.text%>">
				</div>
				<button type="submit" class="btn btn-primary btn-block">Submit</button>
			</form>
		</div>
	</div>

	<a class="btn btn-danger float-right" href="/campgrounds">Go Back</a>
</div>

<%- include("../partials/footer") %>
