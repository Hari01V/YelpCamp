<%- include("../partials/header") %>
<div class=container>
	<h1 class="display-4 text-center mx-auto">Create a New CampGround Here</h1>
	<div class="row justify-content-center">
		<div class="col-md-6">
			<form action="/campgrounds" method="POST">
				<div class="form-group">
					<label for="name">Campground NAME</label>
					<input class="form-control" id="name" type="text" name="name">
				</div>
				<div class="form-group">
					<label for="image">Image URL</label>
					<input class="form-control" id="image" type="text" name="image">
				</div>
				<div class="form-group">
					<label for="desc">Description</label>
					<input class="form-control" id="desc" type="text" name="desc">
				</div>
				<div class="form-group">
					<label for="price">Price ($ per night)</label>
					<input class="form-control" id="price" type="number" name="price" min="0.00" step="0.01">
				</div>
				<button type="submit" class="btn btn-primary btn-block">Submit</button>
			</form>
		</div>
	</div>

	<a class="btn btn-danger float-right" href="/campgrounds">Go Back</a>
</div>

<%- include("../partials/footer") %>
