<%- include("../partials/header") %>

<header class="jumbotron">
	<div class="container">
		<h1 class="display-4">Welcome to YelpCamp</h1>
		<p class="lead">View our hand-picked CampGrounds from all over the world</p>
		<p>
			<a href="/campgrounds/new" class="btn btn-outline-primary btn-lg" role="button">Add New Campground</a>
		</p>
	</div>
</header>
<div class="container">
	<div class="row">
		<% campgrounds.forEach(function(camp){ %>
		<div class="col-md-6 col-lg-4">
			<div class="card text-center mb-4">
				<img src="<%= camp.image %>" class="card-img-top">
				<div class="card-body">
					<h4 class="card-title"><%= camp.name %></h4>
					<a class="card-link" href="/campgrounds/<%= camp._id %>">More info</a>
				</div>
			</div>
		</div>
		<% }); %>
	</div>
	

	<a href="/">Back to HomePage</a>
</div>

<%- include("../partials/footer") %>
